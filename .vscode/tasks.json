{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-dev",
      "dependsOn": ["start-client", "start-server"],
      "dependsOrder": "parallel"
    },
    {
      "label": "start-client",
      "type": "shell",
      "command": "cd client && npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "ready in.*"
        }
      }
    },
    {
      "label": "start-server",
      "type": "shell",
      "command": "cd server && npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*started.*"
        }
      }
    }
  ]
}
